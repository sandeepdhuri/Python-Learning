###########################################################

#--For loop--

Number_list = [2, 3, 5, 7, 9]
for number in Number_list:
    print(number)
    
###########################################################
###########################################################

# --while loops--
count = 0
while count < 10:
    print(count)
    count += 1  # This is the same as count = count + 1
    
###########################################################
###########################################################

# if else
if marks >= 35:
   print ("Congrats you have passed")
else:
   print ("Beter Luck Next time")
   
###########################################################
###########################################################  

#elif 

if marks>= 70:
   print ("Congrats you have passed with distinction")
   break
elif marks>= 60:
   print ("Congrats you have passed with First class")
   break
elif marks>= 50:
   print ("Congrats you have passed with Second Class")
   break
elif marks>= 35:
   print ("Congrats you have passed with PASS Class")
   break
else:
   print ("Better Luck Next time")
   
